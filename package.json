{
  "name": "files-splitter",
  "version": "0.0.0",
  "main":"./electronJS/main.js",
  "author": {
    "name": "Ahmad Alkaf",
    "email": "ahmad.medoo.700@gmail.com"
  },
  "description": "This is an example of an Electron App build with Angular framework and packaged with Electron-Forge. Made to be copied offline to build any app with existed modules and packages.",
  
  "scripts": {
    "serve": "nodemon --watch ./electron/*.ts -e ts --exec \"tsc ./electron/main.ts ./electron/preload.ts --outDir electronJS & electron .\"",
    "serveRenderer": "nodemon --watch ./destination/*.js ./src/** ./electron/*.ts -e ts js html scss --exec \"ng build & tsc ./electron/main.ts ./electron/preload.ts --outDir electronJS & electron .\"",
    "build": "tsc ./electron/main.ts ./electron/preload.ts --outDir electronJS & electron .",
    "buildRenderer": "ng build & tsc ./electron/main.ts ./electron/preload.ts --outDir electronJS & electron .",
    "test": "ng test",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "installer": "electron-builder"
  },
  "build": {
    "appId": "com.files-splitter.app",
    "productName": "Files Splitter",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./src/website.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "./src/website.ico",
      "uninstallerIcon": "./src/website.ico",
      "uninstallDisplayName": "Uninstall split-files-into-folders",
      "license": "./README.md",
      "allowToChangeInstallationDirectory": true
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.1.0",
    "@angular/cdk": "^14.1.1",
    "@angular/common": "^14.1.0",
    "@angular/compiler": "^14.1.0",
    "@angular/core": "^14.1.0",
    "@angular/forms": "^14.1.0",
    "@angular/material": "^14.1.1",
    "@angular/platform-browser": "^14.1.0",
    "@angular/platform-browser-dynamic": "^14.1.0",
    "@angular/router": "^14.1.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.1.1",
    "@angular/cli": "~14.1.1",
    "@angular/compiler-cli": "^14.1.0",
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "@types/jasmine": "~4.0.0",
    "@types/jquery": "^3.5.14",
    "@types/node": "^18.6.3",
    "electron": "^20.0.1",
    "electron-builder": "^23.3.3",
    "jasmine-core": "~4.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "~4.7.2"
  }
}